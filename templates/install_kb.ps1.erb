Install-WindowsUpdate -KBArticleID "<%= @kb %>" -AcceptAll -IgnoreReboot -ErrorAction SilentlyContinue
switch ( (Get-WUHistory | ? KB -eq <%= @kb %>).Result ) {
    'Succeeded' { Set-Content "C:\ProgramData\InstalledUpdates\<%= @kb %>.flg" "Installed" }
    'Failed'    { Write-Output "Error installing <%= @kb %>!"; Exit 1 }
    ''          { Write-Output "Update <%= @kb %> is not provided by the update server!"; Exit 2 }
}
