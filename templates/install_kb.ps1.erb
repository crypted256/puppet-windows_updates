$result = Install-WindowsUpdate -KBArticleID "<%= @kb %>" -AcceptAll -IgnoreReboot -ErrorAction SilentlyContinue
switch ( $result[0].Result ) {
    'Installed' { Set-Content "C:\ProgramData\InstalledUpdates\<%= @kb %>.flg" "Installed" }
    'Failed'    { Write-Output "Error installing <%= @kb %>!"; Exit 1 }
    ''          { Write-Output "Update <%= @kb %> is not provided by the update server!"; Exit 1 }
}
